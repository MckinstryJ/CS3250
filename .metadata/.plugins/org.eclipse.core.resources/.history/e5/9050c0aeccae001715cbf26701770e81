$(document).ready(function(){
     $("#show_row").click(function(){
      	$('#showCo').html("<td><input name='id' type='text' placeholder='Student ID' class='form-control input-md'</td><td><input name='name' type='text' placeholder='Student Name' class='form-control input-md'  /> </td><td><button  name='option' class='form-control btn btn-success'>Save</button></td>");

      	$('#tab_logic').refresh();
  	});
});