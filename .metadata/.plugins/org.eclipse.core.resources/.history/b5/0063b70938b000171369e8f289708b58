$(document).ready(function(){
   	var url = window.location;
   	
   	$("#frm").submit(function(event) {
   		event.preventDefault();
   		ajaxPost();
   	});
   	
   	function ajaxPost() {
   		var formData = {
   			id : [[${student.id}]],
   			name : [[${student.name}]]
   		}
   		
   		$.ajax({
   			type : "POST",
   			contentType : "application/json",
   			url : url,
   			data : JSON.stringify(formData),
   			dataType : 'json',
   			success : function(result) {
   				if(result.status == "Done"){
   					var data="<tr><td>" + id + "</td> <td>" + name + "</td> <td><button>Info</button></td></tr>";
        			$('table').append(data);
   				}else{
   					//...
   				}
   			}, });
   			restData();
   		}
   		
   		function resetData() {
   			[[${student.id}]].val("");
   			[[${student.name}]].val("");
   	})
    
    $(".insertNewRow").on('click',function(){
    	var data="<tr><td>" + [[${student.id}]] + "</td> <td>" + [[${student.name}]] + "</td> <td><button>Info</button></td></tr>";
        $('table').append(data);
	});
});