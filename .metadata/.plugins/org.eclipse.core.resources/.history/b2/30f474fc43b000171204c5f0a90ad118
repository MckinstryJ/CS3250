package edu.msudenver.cs.team_four;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class TeamFourApplication {
	Connection conn;
	
	public static void main(String[] args) throws SQLException, ClassNotFoundException {
		TeamFourApplication app = new TeamFourApplication();
		Class.forName("org.apache.derby.jdbc.EmbeddedDriver");
		
		app.connectionToDerby();
		app.normalDbUsage();
		
		SpringApplication.run(TeamFourApplication.class, args);
	}
	
	private void connectionToDerby() throws SQLException {
		String dbURL = "jdbc:derby:localhost:8080/dataB;create=true";
		conn = DriverManager.getConnection(dbURL);
	}
	
	private void normalDbUsage() throws SQLException {
		Statement stmt = conn.createStatement();
		
		stmt.executeUpdate("Create table student (id varchar(30) primary key, name varchar(100))");
	}
}
