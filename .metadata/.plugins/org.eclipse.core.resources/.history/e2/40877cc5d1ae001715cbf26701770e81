$(document).ready(function(){
     $("#show_row").click(function(){
      	$('#showCo').html("<td><input name='id' type='text' placeholder='CRN' class='form-control input-md' /></td><td><input name='name' type='text' placeholder='Course Name' class='form-control input-md'  /> </td><td><input name='pre' type='text' placeholder='Pre-Req (CRN)' class='form-control input-md'  /> </td><td><input name='credit' type='text' placeholder='Credits' class='form-control input-md'  /> </td><td><button  name='option' class='form-control btn btn-success'>Save</button></td><td><button  name='option' class='form-control btn btn-danger'>Cancel</button></td>");

      	$('#tab_logic').refresh();
  	});
});

$(document).ready(function(){
    $("#addNew").click(function(){
        $(".topRow").toggle();
    });
});